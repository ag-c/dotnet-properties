<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>

        <SolidColorBrush x:Key="ThemeControlLowBrush">#FF1099FF</SolidColorBrush>
        <SolidColorBrush x:Key="ThemeControlMidBrush">#FF1088DD</SolidColorBrush>
        <SolidColorBrush x:Key="ThemeControlHighBrush">#FF1077BB</SolidColorBrush>

        <SolidColorBrush x:Key="ThemeBorderLowBrush">#FF1099FF</SolidColorBrush>
        <SolidColorBrush x:Key="ThemeBorderMidBrush">#FF1088DD</SolidColorBrush>
        <SolidColorBrush x:Key="ThemeBorderHighBrush">#FF1077BB</SolidColorBrush>

        <SolidColorBrush x:Key="ThemeForegroundBrush">#FF000000</SolidColorBrush>
        <SolidColorBrush x:Key="ThemeForegroundLowBrush">#FF808080</SolidColorBrush>

    </Application.Resources>

    <Application.Styles>

        <StyleInclude Source="resm:Avalonia.Themes.Default.DefaultTheme.xaml?assembly=Avalonia.Themes.Default" />
