<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <Styles.Resources>
        <FontFamily x:Key="OpenSans">/Resources/Fonts/OpenSans#Open Sans</FontFamily>
        <WindowIcon x:Key="WindowIcon">/Resources/Icon.ico</WindowIcon>
    </Styles.Resources>

    <StyleInclude Source="/Styles/SideBar.xaml" />

    <Style Selector="CheckBox">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="DropDown">
        <Setter Property="MinHeight" Value="28" />
    </Style>

    <Style Selector="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="TextBlock.h2">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="TextBlock.h3">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style Selector="TextBox">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector=":is(Window)">
        <Setter Property="FontFamily" Value="{DynamicResource OpenSans}" />
        <Setter Property="Icon" Value="{DynamicResource WindowIcon}" />
    </Style>

</Styles>
