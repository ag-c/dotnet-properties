<Project>

    <PropertyGroup>
        <PackageVersion Condition="'$(PackageVersionSuffix)' != ''">$(PackageVersion)$(PackageVersionSuffix)</PackageVersion>
    </PropertyGroup>

    <PropertyGroup>
        <BaseDescription>dotnet-properties is a .NET Core global tool which allows to edit project properties using a cross-platform UI.</BaseDescription>
    </PropertyGroup>
    
    <PropertyGroup>
        <Authors>jp2masa</Authors>
        <Copyright>Copyright Â© $([System.DateTime]::Now.Year) jp2masa</Copyright>
        <PackageIcon>Icon.png</PackageIcon>
        <PackageProjectUrl>http://github.com/jp2masa/dotnet-properties</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
        <PackageTags>dotnet properties core csharp vb visual basic fsharp csproj vbproj fsproj proj</PackageTags>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/jp2masa/dotnet-properties</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="$(RepoRoot)Icon.png" Pack="True" PackagePath="" Visible="False" />
    </ItemGroup>

</Project>
